<%= simple_form_for (search_item), data: { search_target: "form" } do |f| %>
   <%= f.input :query, 
    placeholder: "Search for an article...", 
    input_html: { data: { search_target: 'queryInput', action: 'input->search#handleInput' }, class: 'border-2 border-solid rounded p-2 text-lg border-slate-400 w-full text-slate-800 outline-slate-950' }, 
    label: false
   %>
   <%= f.input :user_ip, :as => :hidden, input_html: { value: @ip }, data: { search_target: 'ipInput' } %>
<% end %>